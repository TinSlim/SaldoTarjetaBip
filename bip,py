def MayorQue(bip):
    try:
        numero= (bip['saldoTarjeta'].replace("$","").replace(".",""))
        if int(numero)>3000:
            print("saldo: "+str(bip['saldoTarjeta'])+"   numero: "+str(bip['id']))
            return bip
    except:
        #print("error")
        return



